<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/horizontal_margin"
    android:layout_marginTop="5dp"
    android:layout_marginRight="@dimen/horizontal_margin"
    android:layout_marginBottom="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/light_gray"
    app:cardCornerRadius="9dp"
    app:cardElevation="0dp"
    app:contentPaddingBottom="19dp"
    app:contentPaddingLeft="21dp"
    app:contentPaddingRight="21dp"
    app:contentPaddingTop="19dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_bold"
            android:maxLines="3"
            android:textColor="@color/dark"
            android:textSize="16sp"
            tools:text="Dow Jones Futures Fall But Tech Stocks Rally On Treasury Yields; ARK Sets $3,000 Tesla Price Target" />

        <TextView
            android:id="@+id/news_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_title"
            android:layout_marginTop="18dp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_semibold"
            android:maxLines="5"
            android:textColor="@color/dark"
            android:textSize="14sp"
            tools:text="The stock market fell last week, but the Nasdaq suffered the most. Facebook, Google and Apple supplier Qorvo are near buys. Ark set a new $3,000 price target." />

        <TextView
            android:id="@+id/news_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_description"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_semibold"
            android:maxLines="5"
            android:textColor="@color/dark"
            android:textSize="14sp"
            tools:text="Mon, 22 Mar 2021" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>